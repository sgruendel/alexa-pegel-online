{
  "name": "pegel-online",
  "version": "1.3.0",
  "description": "Alexa Skill for interacting with http://www.pegelonline.wsv.de",
  "repository": {
    "type": "git",
    "url": "https://github.com/sgruendel/alexa-pegel-online.git"
  },
  "main": "index.js",
  "scripts": {
    "invoke": "aws lambda invoke --function-name 'pegelOnline' --payload fileb://../tests/events/alexa-start-session.json ../tests/out.txt && cat ../tests/out.txt",
    "test": "mocha",
    "deploy": "npm prune --production && npm run zip && npm run upload",
    "upload": "aws lambda update-function-code --function-name 'pegelOnline' --zip-file fileb://../index.zip",
    "zip": "zip -r ../index.zip . -x 'package.json' 'test/*' '*.git*' '*~' "
  },
  "author": "Stefan Gr√ºndel",
  "license": "GPL-3.0",
  "dependencies": {
    "alexa-sdk": "^1.0.25"
  },
  "devDependencies": {
    "aws-lambda-mock-context": "^3.1.1",
    "chai": "^4.1.2",
    "mocha": "^5.0.1"
  }
}
