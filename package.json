{
  "name": "pegel-online",
  "version": "1.3.1",
  "description": "Alexa Skill for interacting with http://www.pegelonline.wsv.de",
  "repository": {
    "type": "git",
    "url": "https://github.com/sgruendel/alexa-pegel-online.git"
  },
  "main": "index.js",
  "scripts": {
    "update-stations": "node src/create-station-slot-values.js",
    "invoke": "aws lambda invoke --function-name 'pegelOnline' --payload fileb://test/events/alexa-start-session.json test/out.txt && cat test/out.txt",
    "test": "nyc --reporter=lcov --reporter=text mocha",
    "deploy": "npm run zip && npm run upload",
    "upload": "aws lambda update-function-code --function-name 'pegelOnline' --zip-file fileb://index.zip",
    "zip": "npm prune --production && zip -r index.zip node_modules && cd src && zip ../index.zip *"
  },
  "author": "Stefan Gr√ºndel",
  "license": "GPL-3.0",
  "dependencies": {
    "alexa-sdk": "^1.0.25"
  },
  "devDependencies": {
    "aws-lambda-mock-context": "^3.1.1",
    "chai": "^4.1.2",
    "eslint": "^4.18.0",
    "eslint-config-strongloop": "^2.1.0",
    "mocha": "^5.0.1",
    "nyc": "^11.4.1"
  },
  "eslintConfig": {
    "extends": "strongloop",
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "max-len": [
        "error",
        120,
        4,
        {
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignorePattern": "^\\s*var\\s.+=\\s*(require\\s*\\()|(/)"
        }
      ]
    }
  }
}
